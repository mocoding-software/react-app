{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [    
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "example:basic:config"        
      ],
      "preLaunchTask": "build",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "name": "Debug Basic Config Example",
      "request": "launch",            
      "program": "${workspaceRoot}/packages/react-app/src/cli/index.ts",
      "args": [        
        "config"        
      ],
      "outFiles": [
        "${workspaceRoot}/packages/react-app/lib/**/*.js"
      ],
      "cwd": "${workspaceRoot}/examples/basic",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,      
      "preLaunchTask": "build"
    },
    {
      "type": "node",
      "name": "Debug Basic Build Example",
      "request": "launch",            
      "program": "${workspaceRoot}/packages/react-app/src/cli/index.ts",
      "args": [        
        "build"        
      ],
      "outFiles": [
        "${workspaceRoot}/packages/react-app/lib/**/*.js"
      ],
      "cwd": "${workspaceRoot}/examples/basic",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,      
      "preLaunchTask": "build"
    }
  ]
}
